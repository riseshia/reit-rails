<div class="row">
  <% if note %>
    <h3><%= note.title %></h3>

    <div class="note-contents">
      <%= markdown(note.contents) %>
    </div>

    <%= link_to "next", book_next_path, method: :post, class: "button button-primary" %>
    <%= link_to "reset", book_reset_path, method: :post, class: "button" %>
  <% else %>
    There is no Notes<br>
  <% end %>
</div>

<div class="row">
  <%= link_to "All notes", notes_path %>
</div>
